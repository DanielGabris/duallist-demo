<%= form_for(@organization) do |f| %>

    <div class="form-group">
      <%= f.select(:employees, {}, {}, {multiple: 'multiple', 'data-title': 'employees', 'data-source': '/employees.json', 'data-value': 'id', 'data-text': 'name'}) %>
    </div>

    <div class="form-group">
        <div class="actions">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
    </div>

<% end %>
